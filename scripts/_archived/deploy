#!/bin/bash

# McCal Media Website - Super Simple Deploy
# Usage: ./deploy [platform]
# If no platform specified, deploys to Netlify (default)

set -e  # Exit on any error

echo "ğŸš€ McCal Media Website Deployment"
echo "=================================="

# Default to netlify if no platform specified
PLATFORM=${1:-netlify}

echo "ğŸ“¦ Building website..."
npm run build

echo "ğŸš€ Deploying to $PLATFORM..."
case $PLATFORM in
  "netlify"|"n")
    npm run deploy:netlify
    echo "âœ… Deployed to Netlify!"
    echo "ğŸ”— Your site should be live at your Netlify URL"
    ;;
  "vercel"|"v")
    npm run deploy:vercel
    echo "âœ… Deployed to Vercel!"
    ;;
  "surge"|"s")
    npm run deploy:surge
    echo "âœ… Deployed to Surge!"
    echo "ğŸ”— Your site should be live at: https://mccal-media.surge.sh"
    ;;
  "all"|"a")
    echo "ğŸš€ Deploying to all platforms..."
    npm run deploy:netlify && echo "âœ… Netlify done!"
    npm run deploy:vercel && echo "âœ… Vercel done!"
    npm run deploy:surge && echo "âœ… Surge done!"
    echo "ğŸ‰ All deployments complete!"
    ;;
  *)
    echo "âŒ Unknown platform: $PLATFORM"
    echo "Available platforms: netlify (n), vercel (v), surge (s), all (a)"
    exit 1
    ;;
esac

echo ""
echo "ğŸ‰ Deployment complete! Your website is live!"